<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/display_settings_title">

        <PreferenceScreen
                android:key="expanded_desktop"
                android:title="@string/power_menu_expanded_desktop"
                android:fragment="com.android.settings.applications.ExpandedDesktopPreferenceFragment" />

        <ListPreference
            android:key="pref_scrollingcache"
            android:dialogTitle="@string/pref_scrollingcache_title"
            android:title="@string/pref_scrollingcache_title"
            android:summary="@string/pref_scrollingcache_summary"
            android:entries="@array/entries_scrollingcache"
            android:entryValues="@array/values_scrollingcache" />

        <SwitchPreference
            android:key="status_bar_brightness_control"
            android:summary="@string/status_bar_brightness_control_summary"
            android:title="@string/status_bar_brightness_control_title" />

        <SwitchPreference
            android:key="kill_app_longpress_back"
            android:title="@string/kill_app_longpress_back"
            android:summary="@string/kill_app_longpress_back_summary"/>

        <!-- Hide Lockscreen clock & date -->

         <com.android.settings.preference.SystemSettingSwitchPreference
            android:key="hide_lockscreen_clock"
            android:title="@string/hide_lockscreen_clock_title"
            android:defaultValue="true" />

         <com.android.settings.preference.SystemSettingSwitchPreference
            android:key="hide_lockscreen_date"
            android:title="@string/hide_lockscreen_date_title"
            android:defaultValue="true" />

        <com.android.settings.preference.SystemSettingSwitchPreference
                android:key="double_tap_sleep_gesture"
                android:title="@string/double_tap_to_sleep_title"
                android:summary="@string/double_tap_to_sleep_summary"
                android:defaultValue="false" />

        <com.android.settings.preference.SystemSettingSwitchPreference
                android:key="double_tap_sleep_anywhere"
                android:title="@string/double_tap_sleep_anywhere_title"
                android:summary="@string/double_tap_sleep_anywhere_summary"
                android:defaultValue="false" />

        <com.android.settings.preference.SystemSettingSwitchPreference
                android:key="double_tap_sleep_navbar"
                android:title="@string/double_tap_sleep_nav_bar_title"
                android:summary="@string/double_tap_sleep_nav_bar_summary"
                android:defaultValue="false" />

</PreferenceScreen>
